@model UserDto
@{
    ViewData["Title"] = "Kullanıcı İşlemleri";
}
<!-- BEGIN: Content-->
<div class="app-content content">
    <div class="content-overlay"></div>
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-12 mb-2 mt-1">
                <div class="breadcrumbs-top">
                    <h5 class="content-header-title float-left pr-1 mb-0">Hesap Ayaları</h5>
                    <div class="breadcrumb-wrapper d-none d-sm-block"></div>
                </div>
            </div>
        </div>
        <div class="content-body">
            <!-- account setting page start -->
            <section id="page-account-settings">
                <div class="row">
                    <div class="col-12">
                        <div class="row">
                            <!-- left menu section -->
                            <div class="col-md-3 mb-2 mb-md-0 pills-stacked">
                                <ul class="nav nav-pills flex-column">
                                    <li class="nav-item">
                                        <a class="nav-link d-flex align-items-center active" id="account-pill-general" data-toggle="pill" href="#account-vertical-general" aria-expanded="true">
                                            <i class="bx bx-cog"></i>
                                            <span>
                                                Genel
                                            </span>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link d-flex align-items-center" id="account-pill-password" data-toggle="pill" href="#account-vertical-password" aria-expanded="false">
                                            <i class="bx bx-lock"></i>
                                            <span>
                                                Şifreyi Değiştir
                                            </span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <!-- right content section -->
                            <div class="col-md-9">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="tab-content">
                                            <div role="tabpanel" class="tab-pane active" id="account-vertical-general" aria-labelledby="account-pill-general" aria-expanded="true">
                                                <form asp-action="Edit" method="post" class="validate-form" id="jquery-val-form">
                                                    <div asp-validation-summary="ModelOnly" class="alert bg-rgba-danger alert-dismissible mb-2">
                                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                            <span aria-hidden="true">×</span>
                                                        </button>
                                                    </div>
                                                    @if (ViewBag.success == "true")
                                                    {
                                                        <span>Bilgiler güncellenmiştir</span>
                                                    }
                                                    <div class="row">
                                                        <div class="col-12">
                                                            <div class="form-group">
                                                                <div class="controls">
                                                                    <h6 class="invoice-address">
                                                                        İsim
                                                                    </h6>
                                                                    <input asp-for="Name" class="form-control" placeholder="İsim">
                                                                    <span asp-validation-for="Name" class="error"></span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-12">
                                                            <div class="form-group">
                                                                <div class="controls">
                                                                    <h6 class="invoice-address">
                                                                        Soy isim
                                                                    </h6>
                                                                    <input asp-for="LastName" class="form-control" placeholder="Soy isim">
                                                                    <span asp-validation-for="LastName" class="error"></span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-12">
                                                            <div class="form-group">
                                                                <h6 class="invoice-address">
                                                                    Mail adresi
                                                                </h6>
                                                                <input asp-for="Email" class="form-control" type="email" placeholder="mail@mail.com">
                                                                <span asp-validation-for="Email" class="error"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-12 d-flex flex-sm-row flex-column justify-content-end">
                                                            <button type="submit" class="btn btn-primary glow mr-sm-1 mb-1">
                                                                Güncelle
                                                            </button>
                                                            <button onclick="window.location='@Url.Action( "Index", "Home")'" type="reset" class="btn btn-light mb-1">
                                                                Vazgeç
                                                            </button>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- account setting page ends -->
        </div>
    </div>
</div>
<!-- END: Content-->