@model ProjectCapacityViewModel
@{
    ViewBag.Title = "Proje Kapasitelerine Dair Bilgiler";
}
<!-- BEGIN: Content-->
<div class="app-content content">
    <div class="content-wrapper">
        <div class="row match-height">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="text-primary">
                            Ticarileşmeye Dair Bilgiler
                        </h4>
                    </div>
                    <div class="card-body">
                        <hr />
                        <form asp-action="EmploymentInfo" method="get">
                            @Html.AntiForgeryToken()
                            <div class="form-body">
                                <div class="row">
                                    <div class="col-md-5">
                                        <h6 class="invoice-address text-justify">
                                            Yürütülen (Devam Eden+Başlayan+Tamamlanan) Projelerin Dönemsel (Faaliyet Yılı) Harcaması (TL)
                                        </h6>
                                    </div>
                                    <div class="col-md-2 form-group">
                                        <input asp-for="ProjectCapacityInfo.PeriodProjectExpense" class="form-control currency" readonly="readonly" />
                                    </div>
                                    <div class="col-md-5"></div>

                                    <div class="col-md-5">
                                        <h6 class="invoice-address text-justify">
                                            Yürütülen (Devam Eden+Başlayan+Tamamlanan) Tüm Kamu Destekli Projelere Faaliyet Yılı İçindeki Toplam Kamu Katkısı (TL)
                                        </h6>
                                    </div>
                                    <div class="col-md-2 form-group">
                                        <input asp-for="ProjectCapacityInfo.PeriodUtilityExpense" class="form-control currency" readonly="readonly" />
                                    </div>
                                    <div class="col-md-5"></div>

                                    <div class="col-md-5">
                                        <h6 class="invoice-address text-justify">
                                            Faaliyet Yılı İçinde Ar-Ge Merkezinin Kabul Edilen AB ve Uluslararası Destekli Proje Sayısı
                                        </h6>
                                    </div>
                                    <div class="col-md-2 form-group">
                                        <input asp-for="ProjectCapacityInfo.IntSupportedProjectNumber" class="form-control" readonly="readonly" />
                                    </div>
                                    <div class="col-md-5"></div>

                                    <div class="col-md-5">
                                        <h6 class="invoice-address text-justify">
                                            Faaliyet Yılı İçinde Ar-Ge Merkezinin Kabul Edilen Ulusal Destekli Proje Sayısı
                                        </h6>
                                    </div>
                                    <div class="col-md-2 form-group">
                                        <input asp-for="ProjectCapacityInfo.NationalAcceptedProjectNumber" class="form-control" readonly="readonly" />
                                    </div>
                                    <div class="col-md-5"></div>
                                </div>
                                <div class="card-footer d-flex justify-content-between pt-1" style="font-size:inherit">
                                    <div class="d-flex align-items-center"></div>
                                    <div class="d-flex align-items-center">
                                        <span class="ml-25">
                                            Bilgileri düzeltmek için
                                            <a asp-action="NewData">
                                                Endeks bilgileri
                                            </a>
                                            sayfasına gidiniz.
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>