@model List<RdCenterPersonStaffInfoDto>
@{
    ViewBag.Title = "AGM Personel Bilgileri";
    int rowNumber = 0;
}
<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-body">
            <h4 class="text-primary">
                AGM Personel Bilgileri
            </h4>
            <br />
            <section class="invoice-list-wrapper">
                <div class="users-list-table">
                    <div class="card">
                        <div class="card-body">
                            <!-- datatable start -->
                            <div class="table-responsive">
                                <table id="users-list-datatable" class="table" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th hidden="hidden"></th>
                                            <th hidden="hidden"></th>
                                            <th hidden="hidden">
                                                Sıra No
                                            </th>
                                            <th>
                                                Görev
                                            </th>
                                            <th>
                                                Nitelik
                                            </th>
                                            <th>
                                                Sayı
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            rowNumber++;
                                            <tr>
                                                <td hidden="hidden"></td>
                                                <td hidden="hidden"></td>
                                                <td hidden="hidden">
                                                    @rowNumber
                                                </td>
                                                <td rowspan="1">
                                                    @Html.DisplayFor(modelItem => item.PersonPosition)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.EducationStatu)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.PersonNumber)
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <!-- datatable ends -->
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
<!-- END: Content-->