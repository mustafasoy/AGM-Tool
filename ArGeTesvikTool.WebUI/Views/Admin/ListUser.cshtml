@model UserListViewModel
@{
    ViewData["Title"] = "Kullanıcı Listesi";
}
<!-- BEGIN: Content-->
<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-body">
            <h4 class="text-primary">
                Kullanıcı Liste
            </h4>
            <br />
            <!-- users list start -->
            <section class="users-list-wrapper">
                <div class="users-list-filter px-1">
                    <form>
                        <div class="row border rounded py-2 mb-2">
                            <div class="col-12 col-sm-6 col-lg-3">
                                <h6 class="invoice-address">
                                    Rol
                                </h6>
                                <fieldset class="form-group">
                                    <select asp-items="@Model.Roles" id="users-list-role" class="form-control">
                                        <option value="">
                                            Seçiniz
                                        </option>
                                    </select>
                                </fieldset>
                            </div>
                            <div class="col-12 col-sm-6 col-lg-3">
                                <h6 class="invoice-address">
                                    Durum
                                </h6>
                                <fieldset class="form-group">
                                    <select class="form-control" id="users-list-status">
                                        <option value="">
                                            Hepsi
                                        </option>
                                        <option value="Aktif">
                                            Aktif
                                        </option>
                                        <option value="Pasif">
                                            Pasif
                                        </option>
                                    </select>
                                </fieldset>
                            </div>
                            <div class="col-12 col-sm-6 col-lg-3">
                                <h6 class="invoice-address">
                                    Doğrulandı
                                </h6>
                                <fieldset class="form-group">
                                    <select class="form-control" id="users-list-verified">
                                        <option value="">
                                            Hepsi
                                        </option>
                                        <option value="Evet">
                                            Evet
                                        </option>
                                        <option value="Hayır">
                                            Hayır
                                        </option>
                                    </select>
                                </fieldset>
                            </div>
                            <div class="col-12 col-sm-6 col-lg-3 d-flex align-items-center">
                                <button type="reset" class="btn btn-primary btn-block glow users-list-clear mb-0">
                                    Temizle
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="users-list-table">
                    <div class="card">
                        <div class="card-body">
                            <!-- datatable start -->
                            <div class="table-responsive">
                                <table id="users-list-datatable" class="table" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>
                                                kullanıcı adı
                                            </th>
                                            <th>
                                                ad soyad
                                            </th>
                                            <th>
                                                doğrulandı
                                            </th>
                                            <th>
                                                rol
                                            </th>
                                            <th>
                                                durum
                                            </th>
                                            <th>
                                                düzenle
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Users)
                                        {
                                            <tr>
                                                <td>
                                                    @item.UserName
                                                </td>
                                                <td>
                                                    @item.Name @item.LastName
                                                </td>
                                                <td>
                                                    @if (item.Verified == "Evet")
                                                    {
                                                        <span class="badge badge-light-success">
                                                            Evet
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-light-danger">
                                                            Hayır
                                                        </span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(item.Role))
                                                    {
                                                        @item.Role
                                                    }
                                                    else
                                                    {
                                                        <span>
                                                            Atanan rol bulunamadı.
                                                        </span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (item.Status == "Aktif")
                                                    {
                                                        <span class="badge badge-light-success">
                                                            Aktif
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-light-danger">
                                                            Pasif
                                                        </span>
                                                    }
                                                </td>
                                                <td>
                                                    <a asp-action="EditUser" asp-route-id="@item.Id" method="post">
                                                        <i class="bx bx-edit-alt"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <!-- datatable ends -->
                        </div>
                    </div>
                </div>
            </section>
            <!-- users list ends -->
        </div>
    </div>
</div>
<!-- END: Content-->
<script src="~/frest/app-assets/vendors/js/jquery/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        var message = "@(TempData["SuccessMessage"] as string)";
        if (message != "") {
            toastr['success'](message, {
            showMethod: 'slideDown',
            hideMethod: 'slideUp',
            timeOut: 2000,
        })
    };
});
</script>