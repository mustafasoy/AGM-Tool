@model RoleDto

@{
    ViewData["Title"] = "Yeni Rol Oluştur";
}

<h1>CreateRole</h1>

<h4>RoleDto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateRole" id="jquery-val-form">
            <div asp-validation-summary="ModelOnly" class="alert bg-rgba-danger alert-dismissible mb-2">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label">Rol adı</label>
                <fieldset class="form-group position-relative has-icon-left">
                    <input asp-for="RoleName" type="text" class="form-control" placeholder="Admin, User">
                    <div class="form-control-position">
                        <i class="bx bx-user"></i>
                    </div>
                </fieldset>
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

