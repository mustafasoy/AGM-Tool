@model RdCenterInfoViewModel
@{
    ViewBag.Title = "Ar-Ge Merkezi Bilgieri";
}
<!-- BEGIN: Content-->
<div class="app-content content">
    <div class="content-wrapper">
        <div class="row match-height">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="text-primary">
                            Ar-Ge Merkezi Bilgieri
                        </h4>
                    </div>
                    <div class="card-body">
                        <hr />
                        <form asp-action="Info" method="post" id="jquery-val-form">
                            <div asp-validation-summary="ModelOnly" class="alert bg-rgba-danger alert-dismissible mb-2">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">×</span>
                                </button>
                            </div>
                            <div class="form-body">
                                <div class="row">
                                    <div class="col-md-4">
                                        <h6 class="invoice-address">
                                            Belge Alım Tarihi
                                        </h6>
                                    </div>
                                    <div class="col-md-8 form-group">
                                        <fieldset class="form-group position-relative has-icon-left">
                                            <input asp-for="RdCenterInfo.DocReceiptDate" asp-format="{0:dd-MM-yyyy}" type="text" class="form-control pickadate-months-year" placeholder="Tarih seçin">
                                            <div class="form-control-position">
                                                <i class='bx bx-calendar'></i>
                                            </div>
                                        </fieldset>
                                    </div>
                                    <div class="col-md-4">
                                        <h6 class="invoice-address">
                                            İşletme Ünvan
                                        </h6>
                                    </div>
                                    <div class="col-md-8 form-group">
                                        <input asp-for="RdCenterInfo.CompanyName" class="form-control">
                                    </div>
                                    <div class="col-md-4">
                                        <h6 class="invoice-address">
                                            Adres
                                        </h6>
                                    </div>
                                    <div class="col-md-8 form-group">
                                        <textarea asp-for="RdCenterInfo.Address" class="form-control" rows="2"></textarea>
                                    </div>
                                    <div class="col-md-4">
                                        <h6 class="invoice-address">
                                            Lokasyon
                                        </h6>
                                    </div>
                                    <div class="col-md-8 form-group">
                                        <input asp-for="RdCenterInfo.Location" class="form-control">
                                    </div>
                                    <div class="col-md-4">
                                        <h6 class="invoice-address">
                                            İl
                                        </h6>
                                    </div>
                                    <input asp-for="RdCenterInfo.CityText" type="hidden" class="form-control" />
                                    <div class="col-md-8 form-group">
                                        <fieldset class="form-group">
                                            <select asp-for="RdCenterInfo.CityCode" id="city" class="select2 form-control select2-hidden-accessible">
                                                <option selected="selected" value="">
                                                    Seçiniz
                                                </option>
                                            </select>
                                        </fieldset>
                                    </div>
                                    <div class="col-md-4">
                                        <h6 class="invoice-address">
                                            Telefon
                                        </h6>
                                    </div>
                                    <div class="col-md-8 form-group">
                                        <input asp-for="RdCenterInfo.PhoneNumber" type="number" type="text" id="phone" maxlength="14" class="form-control" placeholder="(532) 123-4567">
                                    </div>
                                    <div class="col-md-4">
                                        <h6 class="invoice-address">
                                            E-Posta
                                        </h6>
                                    </div>
                                    <div class="col-md-8 form-group">
                                        <input asp-for="RdCenterInfo.Mail" type="email" class="form-control">
                                    </div>
                                    <div class="col-md-4">
                                        <h6 class="invoice-address">
                                            SGK İşyeri Sicil No
                                        </h6>
                                    </div>
                                    <div class="col-md-8 form-group">
                                        <input asp-for="RdCenterInfo.RegistrationNo" type="number" maxlength="26" onkeydown="return event.keyCode !== 69" class="form-control">
                                    </div>
                                    <div class="col-md-4">
                                        <h6 class="invoice-address">
                                            Ofis Alanı (m²)
                                        </h6>
                                    </div>
                                    <div class="col-md-8 form-group">
                                        <input asp-for="RdCenterInfo.OfficeArea" type="number" onkeydown="return event.keyCode !== 69" class="form-control">
                                    </div>
                                    <div class="col-md-4">
                                        <h6 class="invoice-address">
                                            Laboratuvar, Test, Prototip, Atölyesi vb. Bölümlerin Alanı (m²)
                                        </h6>
                                    </div>
                                    <div class="col-md-8 form-group">
                                        <input asp-for="RdCenterInfo.OtherArea" type="number" onkeydown="return event.keyCode !== 69" class="form-control">
                                    </div>
                                    <div class="col-md-4">
                                        <h6 class="invoice-address">
                                            Toplam Alanı (m²)
                                        </h6>
                                    </div>
                                    <div class="col-md-8 form-group">
                                        <input asp-for="RdCenterInfo.TotalArea" type="number" onkeydown="return event.keyCode !== 69" class="form-control">
                                    </div>
                                    <div class="col-sm-12 d-flex justify-content-end">
                                        <button type="submit" class="btn btn-primary mr-1">Kaydet</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END: Content-->
<script src="~/frest/app-assets/js/core/libraries/jquery.min.js"></script>
<script src="~/frest/app-assets/js/phone-mask.js"></script>
<script src="~/frest/app-assets/js/list-city.js"></script>
<script>
    $(document).ready(function () {
        $("#city").val('@ViewBag.City');
        $("#city").change();

        $("#city").on("change", function () {
            $('input[name="RdCenterInfo.CityText"]').val($("#city option:selected").text());
        })
    });
</script>
