@model FinancialInfoViewModel
@{
    ViewBag.Title = "Mali/Finansal Bilgi";
}
<!-- BEGIN: Content-->
<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-body">
            <h4 class="text-primary">
                Mali ve Finansal Bilgi
            </h4>
            <br />
            <section class="invoice-list-wrapper">
                <div class="invoice-create-btn mb-1">
                    <a asp-action="" class="btn btn-primary invoice-create" role="button" aria-pressed="true">
                        Finansal Bilgi Ekle
                    </a>
                </div>
                <div class="users-list-table">
                    <div class="card">
                        <div class="card-body">
                            <!-- datatable start -->
                            <div class="table-responsive">
                                <table id="users-list-datatable" class="table" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>
                                            </th>
                                            <th>
                                                2021
                                            </th>
                                            <th>
                                                2022
                                            </th>
                                            <th>
                                                2019
                                            </th>
                                            <th>
                                                İşlemler
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.FinancialInfoList)
                                        {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NetSales)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TotalAsset)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SortTermLoan)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.LongTermLoan)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DomesticSales)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ExportSales)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.GrossSales)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.RDExpenditure)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AcquisitionTurnover)
                                            </td>
                                            <td>
                                                <div class="invoice-action">
                                                    <a onclick="Update(@item.Id)" class="mr-1" data-toggle="tooltip" title="Satırı düzenle">
                                                        <i class="bx bx-edit"></i>
                                                    </a>
                                                    <a asp-action="PersonnelDelete" asp-route-id="@item.Id" method="post" data-toggle="tooltip" title="Satırı sil">
                                                        <i class="bx bx-trash"></i>
                                                    </a>
                                                </div>

                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <!-- datatable ends -->
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
<!-- END: Content-->