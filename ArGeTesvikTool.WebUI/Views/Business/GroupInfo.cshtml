@model GroupInfoViewModel
@{
    ViewBag.Title = "Bağlı Olduğu Holding/Grup Bilgileri";
}
<!-- BEGIN: Content-->
<div class="app-content content">
    <div class="content-wrapper">
        <div class="row match-height">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="text-primary">
                            Bağlı Olduğu Holding / Grup Bilgileri
                        </h4>
                    </div>
                    <div class="card-body">
                        <hr />
                        <form asp-action="GroupInfo" method="post" id="jquery-val-form">
                            <div asp-validation-summary="ModelOnly" class="alert bg-rgba-danger alert-dismissible mb-2">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">×</span>
                                </button>
                            </div>
                            <div class="form-body">
                                <div class="row">
                                    <div class="col-md-4">
                                        <h6 class="invoice-address">
                                            Holding / Grup Ünvanı
                                        </h6>
                                    </div>
                                    <div class="col-md-8 form-group">
                                        <input asp-for="GroupInfo.CompanyName" class="form-control" />
                                    </div>
                                    <div class="col-md-4">
                                        <h6 class="invoice-address">
                                            Adres
                                        </h6>
                                    </div>
                                    <div class="col-md-8 form-group">
                                        <textarea asp-for="GroupInfo.Address" class="form-control" rows="2"></textarea>
                                    </div>
                                    <div class="col-md-4">
                                        <h6 class="invoice-address">
                                            Menşei
                                        </h6>
                                    </div>
                                    <input asp-for="GroupInfo.CountryText" type="hidden" class="form-control" />
                                    <div class="col-md-8 form-group">
                                        <fieldset class="form-group">
                                            <select asp-for="GroupInfo.CountryCode" id="country" class="select2 form-control select2-hidden-accessible">
                                                <option selected="selected" value="">
                                                    Seçiniz
                                                </option>
                                            </select>
                                        </fieldset>
                                    </div>
                                    <div class="col-md-4">
                                        <h6 class="invoice-address">
                                            Kuruluş Tarihi
                                        </h6>
                                    </div>
                                    <div class="col-md-8 form-group">
                                        <fieldset class="form-group position-relative has-icon-left">
                                            <input asp-for="GroupInfo.FoundingDate" asp-format="{0:dd.MM.yyyy}" type="text"  class="form-control pickadate-months-year" placeholder="Tarih seçin">
                                            <div class="form-control-position">
                                                <i class='bx bx-calendar'></i>
                                            </div>
                                        </fieldset>
                                    </div>
                                    <div class="col-sm-12 d-flex justify-content-end">
                                        <button type="submit" class="btn btn-primary mr-1">Kaydet</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END: Content-->
<script src="~/frest/app-assets/js/list-country.js"></script>
<script>
    $(document).ready(function () {
        $("#country").val('@ViewBag.Country');
        $("#country").change();

        //$("#country").on("change", function () {
        //    $('input[name="GroupInfo.CountryText"]').val($("#city option:selected").text());
        //})
    });
</script>