@{
    ViewData["Title"] = "ConfirmPassword";
    Layout = "~/Views/Shared/_AuthenticationLayout.cshtml";


}
<!-- BEGIN: Content-->
<div class="app-content content">
    <div class="content-overlay"></div>
    <div class="content-wrapper">
        <div class="content-header row"></div>
        <div class="content-body">
            <!-- lock screen starts -->
            <section class="row flexbox-container">
                <div class="col-xl-7 col-10">
                    <div class="card bg-authentication mb-0">
                        <div class="row m-0">
                            <!-- left lock screen section -->
                            <div class="col-md-6 col-12 px-0">
                                <div class="card disable-rounded-right mb-0 p-2" style="padding: 7rem !important">
                                    <div class="card-body">
                                        <h4 class="text-center">
                                            @TempData["ConfirmPassword"]
                                            @{
                                                TempData.Keep("ConfirmPassword");
                                            }
                                            <br />
                                            <br />
                                            <a asp-action="Login">
                                                Giriş yapmak için tıklayınız
                                            </a>
                                        </h4>
                                    </div>
                                </div>
                            </div>
                            <!-- right image section -->
                            <div class="col-md-6 d-md-block d-none text-center align-self-center">
                                <img class="img-fluid" src="~/frest/app-assets/images/authentication/reset-password.png" alt="coffirm-password logo" width="350" />
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- lock screen ends -->
        </div>
    </div>
</div>
<!-- END: Content-->
