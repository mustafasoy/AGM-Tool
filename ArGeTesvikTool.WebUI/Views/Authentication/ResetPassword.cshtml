@model ResetPasswordDto
@{
    ViewData["Title"] = "AGM Şifre Sıfırla";
    Layout = "~/Views/Shared/_AuthenticationLayout.cshtml";
}
<!-- BEGIN: Content-->
<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-body">
            <!-- forgot password start -->
            <section class="row flexbox-container">
                <div class="col-xl-7 col-md-9 col-10  px-0">
                    <div class="card bg-authentication mb-0">
                        <div class="row m-0">
                            <!-- left section-forgot password -->
                            <div class="col-md-6 col-12 px-0">
                                <div class="card disable-rounded-right mb-0 p-2">
                                    <div class="card-header pb-1">
                                        <div class="card-title">
                                            <h4 class="text-center mb-2">Şifremi unuttum</h4>
                                        </div>
                                    </div>
                                    <div class="form-group d-flex justify-content-between align-items-center mb-2">
                                        <div class="text-left">
                                            <div class="ml-3 ml-md-2 mr-1">
                                                <a asp-controller="Login" class="card-link btn btn-outline-primary text-nowrap">
                                                    Giriş Yap
                                                </a>
                                            </div>
                                        </div>
                                        <div class="mr-3">
                                            <a asp-controller="Register" class="card-link btn btn-outline-primary text-nowrap">
                                                Üye Ol
                                            </a>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <div class="text-muted text-center mb-2">
                                            <small>
                                                Yeni şifre belirlemek için kayıtlı mail adresini giriniz.
                                            </small>
                                        </div>
                                        <form asp-action="ResetPassword" class="mb-2" id="jquery-val-form">
                                            <div asp-validation-summary="ModelOnly" class="alert bg-rgba-danger alert-dismissible mb-2">
                                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                    <span aria-hidden="true">×</span>
                                                </button>
                                            </div>
                                            <div class="form-group mb-2">
                                                <label asp-for="Email" class="text-bold-600">
                                                    Mail Adres
                                                </label>
                                                <input asp-for="Email" type="text" class="form-control" placeholder="mail@mail.com">
                                            </div>
                                            <button type="submit" class="btn btn-primary glow position-relative w-100">
                                                Gönder
                                                <i id="icon-arrow" class="bx bx-right-arrow-alt"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <!-- right section image -->
                            <div class="col-md-6 d-md-block d-none text-center align-self-center">
                                <img class="img-fluid" src="~/frest/app-assets/images/authentication/forgot-password.png" alt="forgot-password logo" width="300">
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- forgot password ends -->

        </div>
    </div>
</div>
<!-- END: Content-->
