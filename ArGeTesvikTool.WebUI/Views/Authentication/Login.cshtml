@model LoginDto
@{
    ViewBag.Title = "AGM Giriş";
    Layout = "~/Views/Shared/_AuthenticationLayout.cshtml";
}
<!-- BEGIN: Content-->
<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-body">
            <!-- login page start -->
            <section id="auth-login" class="row flexbox-container">
                <div class="col-xl-8 col-11">
                    <div class="card bg-authentication mb-0">
                        <div class="row m-0">
                            <!-- left section-login -->
                            <div class="col-md-6 col-12 px-0">
                                <div class="card disable-rounded-right mb-0 p-2 h-100 d-flex justify-content-center">
                                    <div class="card-header pb-1">
                                        <div class="card-title">
                                            <h4 class="text-center mb-2">Hoşgeldiniz</h4>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <div class="divider">
                                            <div class="divider-text text-uppercase text-muted">
                                                <small>
                                                    giris
                                                </small>
                                            </div>
                                        </div>
                                        <form asp-action="Login" method="post" id="jquery-val-form">
                                            <div asp-validation-summary="ModelOnly" class="alert bg-rgba-danger alert-dismissible mb-2">
                                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                    <span aria-hidden="true">×</span>
                                                </button>
                                            </div>
                                            <div class="form-group mb-50">
                                                <label asp-for="Email" class="text-bold-600">
                                                    Mail Adres
                                                </label>
                                                <input asp-for="Email" type="email" class="form-control" placeholder="mail@mail.com">
                                                <span asp-validation-for="Email" class="error"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="Password" class="text-bold-600">
                                                    Şifre
                                                </label>
                                                <div id="show_hide_password">
                                                    <fieldset class="form-group position-relative">
                                                        <input asp-for="Password" class="form-control" type="password" minlength="6" placeholder="············">
                                                        <div class="form-control-position">
                                                            <a href="">
                                                                <i class="bx bx-show" aria-hidden="true"></i>
                                                            </a>
                                                        </div>
                                                    </fieldset>
                                                </div>
                                                <span asp-validation-for="Password" class="error"></span>
                                            </div>
                                            <div class="form-group d-flex flex-md-row flex-column justify-content-between align-items-center">
                                                <div class="text-left">
                                                    <div class="checkbox checkbox-sm">
                                                        <input asp-for="RememberMe" type="checkbox" class="form-check-input">
                                                        <label asp-for="RememberMe" class="checkboxsmall">
                                                            <small>
                                                                Beni hatırla
                                                            </small>
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="text-right">
                                                    <a asp-action="ResetPassword" class="card-link">
                                                        <small>
                                                            Parolanızı mı unuttunuz?
                                                        </small>
                                                    </a>
                                                </div>
                                            </div>
                                            <button type="submit" class="btn btn-primary glow w-100 position-relative">
                                                Giriş
                                                <i id="icon-arrow" class="bx bx-right-arrow-alt"></i>
                                            </button>
                                        </form>
                                        <hr>
                                        <div class="text-center">
                                            <small class="mr-25">
                                                Hesabınız yok mu?
                                            </small>
                                            <a asp-action="Register">
                                                <small>
                                                    Üye ol
                                                </small>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- right section image -->
                            <div class="col-md-6 d-md-block d-none text-center align-self-center p-3">
                                <img class="img-fluid" src="~/frest/app-assets/images/authentication/login.png" alt="login logo">
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- login page ends -->
        </div>
    </div>
</div>
<!-- END: Content-->