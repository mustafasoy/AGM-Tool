@model LoginDto
@{
    ViewBag.Title = "Pwc - ArGe Teşvik Modül Giriş";
    Layout = "~/Views/Shared/_AuthenticationLayout.cshtml";
}

<!-- BEGIN: Content-->
<div class="app-content content">
    <div class="content-overlay"></div>
    <div class="content-wrapper">
        <div class="content-header row"></div>
        <div class="content-body">
            <!-- login page start -->
            <section id="auth-login" class="row flexbox-container">
                <div class="col-xl-8 col-11">
                    <div class="card bg-authentication mb-0">
                        <div class="row m-0">
                            <!-- left section-login -->
                            <div class="col-md-6 col-12 px-0">
                                <div class="card disable-rounded-right mb-0 p-2 h-100 d-flex justify-content-center">
                                    <div class="card-header pb-1">
                                        <div class="card-title">
                                            <h4 class="text-center mb-2">Hoşgeldiniz</h4>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <div class="divider">
                                            <div class="divider-text text-uppercase text-muted">
                                                <small>
                                                    giris
                                                </small>
                                            </div>
                                        </div>
                                        <form asp-action="Login" method="post" id="jquery-val-form">
                                            <div asp-validation-summary="ModelOnly" class="error"></div>
                                            <div class="form-group mb-50">
                                                <label asp-for="Email" class="text-bold-600"></label>
                                                <input asp-for="Email" class="form-control" type="email" placeholder="Email">
                                                <span asp-validation-for="Email" class="error"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="Password" class="text-bold-600"></label>
                                                <input asp-for="Password" class="form-control" type="password" placeholder="Şifre">
                                                <span asp-validation-for="Password" class="error"></span>
                                            </div>
                                            <div class="form-group d-flex flex-md-row flex-column justify-content-between align-items-center">
                                                <div class="text-left">
                                                    <div class="checkbox checkbox-sm">
                                                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                                        <label class="checkboxsmall" for="exampleCheck1">
                                                            <small>
                                                                Beni hatırla
                                                            </small>
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="text-right">
                                                    <a href="#" class="card-link">
                                                        <small>Parolanızı mı unuttunuz?</small>
                                                    </a>
                                                </div>
                                            </div>
                                            <button type="submit" class="btn btn-primary glow w-100 position-relative">
                                                Giriş
                                                <i id="icon-arrow" class="bx bx-right-arrow-alt"></i>
                                            </button>
                                        </form>
                                        <hr>
                                        <div class="text-center">
                                            <small class="mr-25">Hesabınız yok mu?</small>
                                            <a asp-action="Register">
                                                <small>Üye ol</small>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- right section image -->
                            <div class="col-md-6 d-md-block d-none text-center align-self-center p-3">
                                <img class="img-fluid" src="~/frest/app-assets/images/authentication/login.png" alt="login logo">
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- login page ends -->
        </div>
    </div>
</div>
<!-- END: Content-->